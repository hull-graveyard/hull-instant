<form class="profile-form" data-action="profile">
  <div class="fields">
    {{#each state.form.fields_list}}
      <div class="field {{field_type}}">
        <label for="profile-form-field-{{name}}">{{title}}</label>
        <input id="profile-form-field-{{name}}" type='text' name='{{name}}'
          {{#required}}required{{/required}}
          value="{{value}}"
        />
      </div>
    {{/each}}
  </div>

  <button class="button" type="submit">
    Save my profile
  </button>
</form>


{{> instant/footer}}

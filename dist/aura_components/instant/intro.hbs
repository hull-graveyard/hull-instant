<div class="hull-instant">

  <h1>{{achievement.name}}</h1>

  <p class="lead">{{achievement.description}}</p>

  {{#if loggedIn}}
    <button class="btn btn-primary" data-hull-action="play">Play</button>
  {{else}}
    {{#each authProviders}}
      <button class="btn" data-hull-action="play" data-hull-provider="{{this}}">
        Play with {{capitalize this}}
      </button>
    {{/each}}
  {{/if}}

</div>


{{> instant/footer}}
